<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--currently pressed turning the toggle on-->
    <item android:drawable="@drawable/ic_password_visibility_on" android:state_checked="true" android:state_pressed="true" />
    <!--currently pressed turning the toggle off-->
    <item android:drawable="@drawable/ic_password_visibility_on" android:state_pressed="true" />
    <!--not pressed default checked state-->
    <item android:drawable="@drawable/ic_password_visibility_on" android:state_checked="true" />
    <!--default non-pressed non-checked-->
    <item android:drawable="@drawable/ic_password_visibility_off" />
</selector>